{
    "name": "hhpnet/core",
    "description": "Core package to run HHP.net website",
    "homepage": "https://github.com/HHPnet/core",
    "require-dev": {
        "phpspec/phpspec": "^2.4"
    },
    "license": "Apache 2.0",
    "authors": [
        {
            "name": "javiyt",
            "email": "me@javi.yt"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4",
        "ramsey/uuid": "^3.2",
        "mongodb/mongodb": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "HHPnet\\Core\\": "src/"
        }
    },
    "scripts": {
